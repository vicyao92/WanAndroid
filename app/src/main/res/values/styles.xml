<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="searchViewStyle">@style/MySearchView</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_toolbar</item>
        <item name="android:textColorSecondary">@color/text_toolbar</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--Toolbar Overflow style-->
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_setting_white</item>
    </style>

    <!--Toolbar popup style-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="TextErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.SearchView">
        <!--修改搜索框提示文字-->
        <item name="defaultQueryHint">输入关键字</item>
        <!--修改打开搜索框的搜索按钮的图标-->
        <item name="searchIcon">@drawable/search</item>
        <!--修改搜索框左边的搜索按钮图标-->
        <item name="searchHintIcon">@null</item>
    </style>

</resources>
